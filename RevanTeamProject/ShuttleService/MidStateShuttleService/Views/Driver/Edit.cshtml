@model MidStateShuttleService.Models.Driver

<!-- Include Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/Routes.css" />
<link rel="stylesheet" href="/css/Modal.css" />

<!-- Include jQuery and Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<body>
    <div>
        <div class="wrapper wrapper--w680 mt-5">
            <div class="form form-1">
                <div class="form-body">
                    <h2 class="title">Edit Driver</h2>
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <div>
                            <input type="hidden" asp-for="DriverId" /> <!-- Include hidden field for driver ID -->

                            <div class="input-fields">
                                <input asp-for="Name" type="text" class="input--style-1" placeholder="Name" required />
                                <div class="div-line"></div>
                                <div id="Name-validation-message" class="validation-message">Please enter a valid name.</div>
                            </div>

                            <div class="input-fields">
                                <input asp-for="PhoneNumber" type="text" class="input--style-1" placeholder="Phone Number" required />
                                <div class="div-line"></div>
                                <div id="PhoneNumb-validation-message" class="validation-message">Please enter a valid phone number.</div>
                            </div>

                            <div class="input-fields">
                                <input asp-for="Email" type="email" class="input--style-1" placeholder="Email" required />
                                <div class="div-line"></div>
                                <div id="Email-validation-message" class="validation-message">Please enter a valid email address.</div>
                            </div>

                            <div class="p-t-20">
                                <button class="btn btn--radius btn--submit" type="submit">Submit</button>
                                <button class="btn btn--radius btn--cancel" type="button" onclick="location.href='../../Dashboard'">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Edit Successful</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Driver edited successfully!
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="location.href='../../Dashboard'">Return</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            var driverSuccess = '@TempData["DriverSuccess"]';
            if (driverSuccess === 'True') {
                $('#successModal').modal('show');
            }
        });
    </script>

    <script src="~/js/driver.js"></script>
</body>