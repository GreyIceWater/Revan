@model MidStateShuttleService.Models.RegisterModel

<link rel="stylesheet" href="~/css/RegisterConfirmation.css" />

    <div class="register-container">
        <h2 class="page-title">Registration Confirmation</h2>

        <div class="section">
            <h4>Student Information</h4>
            <p><strong>Student ID:</strong> @Model.StudentId</p>
            <p><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        </div>

        <div class="section">
            <h4>Shuttle Trip Details</h4>
            <p><strong>Trip Type:</strong> @Model.TripType</p>
            <p><strong>Pick-Up Location:</strong> @Model.PickUpLocation</p>
            <p><strong>Drop-Off Location:</strong> @Model.DropOffLocation</p>
            <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
            <p><strong>Time:</strong> @Model.Time.ToShortTimeString()</p>
            <p><strong>Special Requests:</strong> @Model.SpecialRequest</p>
        </div>

    <!-- Go Back to Home Page Button -->
        <button type="button" onclick="window.location.href='@Url.Action("Index", "Home")'" class="home-button">
            Go Back to Home Page
        </button>

    </div>