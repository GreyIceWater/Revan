@model MidStateShuttleService.Models.AllModels

<div class="cardHeader">
    <h2>Driver</h2>
    <!--search
        <div class="search">
        <label>
            <input id="driverSearch" type="text" placeholder="Search" />
            <i class="bi bi-search"></i>
        </label>
    </div>
    -->
    
    <a asp-controller="Driver" asp-action="Create" class="btn">Add Driver</a>
</div>
<table>
    <thead>
        <tr>
            <td>Name</td>
            <td>Phone Number</td>
            <td>Email</td>
            <td>Is active</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody id="driverTableBody">
        @if (Model.Driver == null)
        {
            <tr><td colspan="5" class="text-center">There are Currently No Routes</td></tr>
        }
        else
        {
            @foreach (var d in Model.Driver)
            {
                <tr class="driverRow">
                    <td>@d.Name</td>
                    <td>@d.PhoneNumber</td>
                    <td>@d.Email</td>
                    <td>@d.IsActive.ToString()</td>
                    <td><a asp-controller="Driver" asp-action="Edit" asp-route-id="@d.DriverId">Edit</a></td>
                    <td><a asp-controller="Driver" asp-action="Delete" asp-route-id="@d.DriverId">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>
<div id="pagination-controls-driver" class="pagination">
    <!-- Pagination buttons will be created by JavaScript here -->
</div>

<script src="~/js/tablePagination.js"></script>

