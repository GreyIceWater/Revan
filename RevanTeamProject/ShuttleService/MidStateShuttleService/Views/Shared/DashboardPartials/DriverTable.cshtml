@{
}
@model MidStateShuttleService.Models.AllModels

<div class="cardHeader">
    <h2>Driver</h2>
    <a asp-controller="Driver" asp-action="Create" class="btn">Add Driver</a>
</div>
<table>
    <thead>
        <tr>
            <td>Name</td>
            <td>Phone Number</td>
            <td>Email</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="5" class="text-center">There are Currently No Routes</td></tr>
        }
        else
        {
            @foreach (var d in Model.Driver)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.PhoneNumber</td>
                    <td>@d.Email</td>
                    <td><a asp-controller="Driver" asp-action="Edit" asp-route-id="@d.DriverId">Edit</a></td>
                    <td><a asp-controller="Driver" asp-action="Delete" asp-route-id="@d.DriverId">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>


