@{
}
@model MidStateShuttleService.Models.AllModels

<div class="cardHeader">
    <h2>Feedback</h2>
</div>
<table>
    <thead>
        <tr>
            <td>Customer Name</td>
            <td>Comment</td>
            <td>Rating</td>
            <td>Date Submitted</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Feedback == null)
        {
            <tr><td colspan="5" class="text-center">There are Currently No Feedbacks</td></tr>
        }
        else
        {
            @foreach (var feedback in Model.Feedback)
            {
                <tr>
                    <td>@feedback.CustomerName</td>
                    <td>
                        @if (feedback.Comment.Length > 10)
                        {
                            @feedback.Comment.Substring(0, 10) <!-- Displaying only the first 10 characters -->
                            <span class="ellipsis">...</span> <!-- Ellipsis span, hidden visually -->
                        }
                        else
                        {
                            @feedback.Comment
                        }
                    </td>
                    <td>@feedback.Rating</td>
                    <td>@feedback.DateSubmitted.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="viewButton" href="#"
                           data-toggle="modal"
                           data-target="#feedbackDetailsModal"
                           data-feedback-id="@feedback.FeedbackId"
                           data-customer-name="@feedback.CustomerName"
                           data-comment="@feedback.Comment"
                           data-rating="@feedback.Rating"
                           data-date-submitted="@feedback.DateSubmitted.ToString("yyyy-MM-dd")">View</a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-controller="Feedback" asp-action="Accept" asp-route-id="@feedback.FeedbackId">Accept</a>
                        <a class="btn btn-danger" asp-controller="Feedback" asp-action="Reject" asp-route-id="@feedback.FeedbackId">Reject</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<div class="modal fade" id="feedbackDetailsModal" tabindex="-1" role="dialog" aria-labelledby="feedbackDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="feedbackDetailsModalLabel">Feedback Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="feedbackDetailsContent">
                    <!-- Feedback details will be displayed here -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/js/Dashboard/FeedbackModal.js"></script>
<script src="/js/Dashboard/feedbackManagement.js"></script>