@{
}
@model IEnumerable<MidStateShuttleService.Models.Location>

<div class="cardHeader">
    <h2>Locations</h2>
    <a asp-controller="Location" asp-action="Create" class="btn">Add Location</a>
</div>
<table>
    <thead>
        <tr>
            <td>Stop Name</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Zip Code</td>
            <td>Abbreviation</td>
            <td>Update</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr><td colspan="8" class="text-center">There are Currently No Locations</td></tr>
        }
        else
        {
            
        }
    </tbody>
</table>
