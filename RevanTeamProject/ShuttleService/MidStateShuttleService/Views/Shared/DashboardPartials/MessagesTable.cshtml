@{
}
@model MidStateShuttleService.Models.AllModels

<div class="cardHeader">
    <h2>Messages</h2>
</div>
<table>
    <thead>
        <tr>
            <td>Name</td>
            <td>Message</td>
            <td>Response Required</td>
            <td>Contact Info</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Message == null)
        {
            <tr><td colspan="4" class="text-center">There are Currently No Messages</td></tr>
        }
        else
        {
            @foreach (var message in Model.Message)
            {
                <tr>
                    <td>@message.name</td>
                    <td>@message.message</td>
                    <td>@(message.responseRequired ? "Yes" : "No")</td>
                    <td>@(string.IsNullOrEmpty(message.contactInfo) ? "N/A" : message.contactInfo)</td>
                    <td><a asp-controller="Message" asp-action="Edit" asp-route-id="@message.id">Edit</a></td>
                    <td><a asp-controller="Message" asp-action="Delete" asp-route-id="@message.id">Delete</a></td>
                </tr>
            }
        }
    </tbody>
</table>
