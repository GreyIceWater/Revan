<!-- index.cshtml or your layout file -->
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>@ViewData["Title"] - MidStateShuttleService</title>
    @RenderSection("Scripts", required: false)
</head>
<body>
    <header>
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg ">
                <!--<a class="navbar-brand" href="#">
                    <img src="#" alt="Mid-State" />
                </a>-->

                <button class="navbar-toggler navbar-light bg-light" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Register" asp-action="Register">Register</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Reservation" asp-action="CheckIn">Check In</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <!-- Pulls the Dispatch to Student form -->
                            <a class="nav-item nav-link" asp-area="" asp-controller="Communicate" asp-action="Index">Message</a>
                        }
                        else
                        {
                            <!-- Pulls the Student to Dispatch form -->
                            <a class="nav-item nav-link" asp-area="" asp-controller="Communicate" asp-action="StudentCommunicate">Message</a>
                        }
                        <a class="nav-item nav-link" asp-area="" asp-controller="Location" asp-action="Create">Add Location</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Routes" asp-action="Create">Add Routes</a>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-white">
        <div class="container-custom d-flex justify-content-between align-items-center py-3 border-highlight">
            <div class="col-md-4 d-flex align-content-center">
                <a href="#" class="me-2 text-decoration-none footer-words">
                    
                    <span>&copy; 2024 Mid-State Shuttle Service</span>
                </a>
            </div>
            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex text-white">
                <li class="ms-3 footer-words"><a class="" href="#"><a href="#"><i class="bi bi-facebook"></i></a></li>
                <li class="ms-3 footer-words"><a class="" href="#"><a href="#"><i class="bi bi-instagram"></i></a></a></li>
            </ul>
        </div>
    <!--
        Will fix this at a later date.
    -->
        
            
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
