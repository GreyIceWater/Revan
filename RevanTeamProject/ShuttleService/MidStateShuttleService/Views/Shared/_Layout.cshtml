@{
   
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>@ViewData["Title"] - MidStateShuttleService</title>
    @RenderSection("Scripts", required: false)
</head>
<body>
    <header>
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg ">
                <a class="navbar-brand" href="#">
                    <img src="~/img/MSTCC2CBanner.jpg" alt="Mid-State" />
                </a>

                <button class="navbar-toggler navbar-light bg-light" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <div class="navbar-nav">
                        <a class="nav-item nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="Register" asp-action="Register">Request a Ride</a>
                        <a class="nav-item nav-link" asp-area="" asp-controller="CheckIn" asp-action="CheckIn">Check In</a>
                        
                        
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <a class="nav-item nav-link" asp-area="" asp-controller="Communicate" asp-action="Index">Message</a>
                            <a class="nav-item nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            // User is signed in, display Signout link
                            <a class="nav-item nav-link" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="Signout">Signout</a>
                        }
                        else
                        {
                            <a class="nav-item nav-link" asp-area="" asp-controller="Communicate" asp-action="StudentCommunicate">Message</a>
                            // User is not signed in, display Sign In link
                            <a class="nav-item nav-link" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="Signin">Sign In</a>
                        }
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footerContainer">
            <div class="footerNav">
                <ul>
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "Register")">Request A Ride</a></li>
                    <li><a href="https://www.mstc.edu/">Mid-State Technical College</a></li>
                    <li><a href="https://www.mstc.edu/shuttle">Shuttle Service Info</a></li>
                    <li><a href="https://wedc.org/workforce-innovation-grant-helps-youth-discover-career-path/">Learn More!</a></li>
                </ul>
            </div>
            
        </div>
        <div class="footerBottom">
            <p>Copyright &copy;2024; Designed by <span class="desinger">Team Revan</span></p>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
